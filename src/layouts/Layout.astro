---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta name="description" content="Johannes Andersen's personal website" />
    <meta
      name="keywords"
      content="Johand,Johannes Andersen,Portfolio,Personal Website"
    />
    <meta name="creator" content="Johannes Andersen" />
    <meta name="application-name" content="Johand.dev" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@johand199" />
    <meta name="twitter:creator" content="@johand199" />
    <meta name="twitter:title" content="Home - Johannes Andersen" />
    <meta
      name="twitter:description"
      content="Johannes Andersen's personal website"
    />

    <meta property="og:title" content="Home - Johannes Andersen" />
    <meta
      property="og:description"
      content="Johannes Andersen's personal website"
    />
    <meta property="og:url" content="https://johand.dev/" />
    <meta property="og:site_name" content="Johand.dev" />
    <meta property="og:locale" content="en" />
    <meta property="og:type" content="website" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
  </head>
  <body class="bg-white dark:bg-gray-800">
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
</style>
